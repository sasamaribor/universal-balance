<body>
  <div class="container">
    <h1>Universal Balance Law</h1>
    <p>Vote for which example you would like to see published next. You can choose a power \( m \in \{1, 2, ..., 6\} \) and a starting number \( n \).</p>
    <form name="vote-form">
      <label for="power">Select power m (1 to 6):</label>
      <select name="power" id="power">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
        <option value="6">6</option>
      </select>

      <label for="start">Enter starting value n:</label>
      <input type="number" name="start" id="start" placeholder="e.g. 5" min="1" required />

      <button type="submit">Submit Vote</button>
    </form>

    <div class="confirmation" id="confirmation">
      ✅ Thank you for your vote! The most popular example will be published soon.
    </div>
  </div>

  <script>
    const form = document.forms['vote-form'];
    const confirmation = document.getElementById('confirmation');

    form.addEventListener('submit', e => {
      e.preventDefault();
      const power = form.power.value;
      const start = form.start.value;

      const webhookURL = 'https://script.google.com/macros/s/YOUR_SCRIPT_ID_HERE/exec';
      fetch(webhookURL, {
        method: 'POST',
        body: new URLSearchParams({ power, start })
      })
        .then(() => {
          form.reset();
          confirmation.style.display = 'block';
        })
        .catch(err => alert('Error submitting vote'));
    });
  </script>
